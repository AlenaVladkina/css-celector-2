<header class="header">
    <div>
        {{> logo}}
    </div>
    <nav class="header-nav col-9">
        <div class="header-nav-right">
            {{>nav list=header}}
        </div>
    </nav>
</header>
{{#with main}}
<main class="hero">
    <img src="{{image}}" alt="hero image" class="hero_image">
    <div class="hero_content">
        <h1 class="hero_title">{{heading}}</h1>
        <p class="hero_text">{{description}}</p>
        <a class="button form_button" href="{{href}}">{{button}}</a>
    </div>
</main>
{{/with}}

<div class="featured">
    {{#each featured}}
    {{>cardBlog data=this}}
    {{/each}}
</div>
<div class="actions">
    {{#each actions}}
    <div class="form_content">

        <h3 class="form_title">{{heading}}</h3>

        <a class="button-hero form_button" href="{{url}}">{{text}}</a>
    </div>
    {{/each}}
</div>

<footer class="footer">
    <div>
        {{> logo}}
        <span class="footer_copyright"> Copyright 2023-2024</span>
    </div>

    {{#each footer}}
    <div>
        <span class="footer_title">{{title}}</span>
        {{> nav list=links isVertical=true}}
    </div>
    {{/each}}

</footer>